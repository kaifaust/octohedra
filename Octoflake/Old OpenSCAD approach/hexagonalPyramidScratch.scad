


module octahedron() {
    
     octo_points = [
        [0, -1, 0], // belt
        [ 1, 0, 0], 
        [ 0,  1, 0], 
        [-1,  0, 0], 
        [0, 0, 1], // top
        [0, 0, -1], // bottom
    ];

    octo_faces = [
        [0, 1, 4], // top pyramid
        [1, 2, 4],
        [2, 3, 4],
        [3, 0, 4],
        [1, 0, 5], // bottom pyramid
        [2, 1, 5],
        [3, 2, 5],
        [0, 3, 5],
    ];

    polyhedron(
        points = octo_points,
        faces = octo_faces
    );
}


