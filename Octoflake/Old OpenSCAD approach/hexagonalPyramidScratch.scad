module octoflake(i, size, center){
    
    if (i == 0){
        translate(center) scale(size) octahedron();
    } else {
        octoflake(i-1, size/2, center + 1/2 * size * [0, -1, 0]);
        octoflake(i-1, size/2, center + 1/2 * size * [1, 0, 0]);
        octoflake(i-1, size/2, center + 1/2 * size * [0, 1, 0]);
        octoflake(i-1, size/2, center + 1/2 * size * [-1, 0, 0]);
        octoflake(i-1, size/2, center + 1/2 * size * [0, 0, 1]);
        octoflake(i-1, size/2, center + 1/2 * size * [0, 0, -1]);
    }
    
    
}
